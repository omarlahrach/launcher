<resources>
    <!-- Base application theme. -->
    <style name="Theme.ErgomindPro2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/dark_colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/dark_colorOnPrimary</item>
        <item name="android:colorBackground">@color/dark_colorBackground</item>
        <item name="colorSurface">@color/dark_colorSurface</item>
        <item name="colorOnSurface">@color/dark_colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/dark_colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/dark_colorOnSecondary</item>
        <!-- Custom components -->
        <item name="android:windowFullscreen">true</item>
        <!-- Enable transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>
</resources>